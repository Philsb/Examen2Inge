<head>
    <script>
        function mostrarFormularioPizza() {
            document.getElementById("modal").style = "display: block;";
            toggleTabFormulario("#baseButton", "base");
            toggleTabBase("#masaButton", "masa");

        }

        function quitarFormularioPizza() {
            var modal = document.getElementById("modal");
            modal.style = "display: none;";
            while (numeroNotasGenerales > 0) {
                quitarNota();
            }
            document.getElementById("form").reset()
        }

        function toggleTabFormulario(buttonName, divName) {
            $("#baseButton").removeClass('active');
            $("#toppingsButton").removeClass('active');
            $("#lugarButton").removeClass('active');
            $(buttonName).addClass('active');

            document.getElementById('base').style = "display: none;";
            document.getElementById('toppings').style = "display: none;";
            document.getElementById('lugar').style = "display: none;";
            document.getElementById(divName).style = "display = block;";
        }

        function toggleTabBase(buttonName, divName) {
            $("#masaButton").removeClass('active');
            $("#salsaButton").removeClass('active');
            $("#quesoButton").removeClass('active');
            $(buttonName).addClass('active');

            document.getElementById('masa').style = "display: none;";
            document.getElementById('salsa').style = "display: none;";
            document.getElementById('queso').style = "display: none;";
            document.getElementById(divName).style = "display = block;";

        }

       
    </script>


